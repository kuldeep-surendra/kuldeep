<%=form_for :project do |f|%>

<h2>Project</h2>

	<%= f.label :Name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :Duration %><br>
    <%= f.text_field :duration %><br>
    <%= f.label :Team_size %><br>
    <%= f.text_field :team_size %><br>
    <%= f.label :cost %><br>
    <%= f.text_field :cost %><br>
    <%= f.label :domain %><br>
    <%= f.text_field :domain %><br>
    <%= f.label :add_user %><br>
    <%= f.text_field :user_id %><br>
    
    <%= f.submit :submit %>
  <%end%>

  <h2>list of Users</h2>
  <table border="2px">
<tr>
  <th>First Name</th>
  <th>Last Name</th>
  <th>Email</th>
  <th>Edit</th>
  <th>Destroy</th>
  <th>Profile</th>
</tr> 

<% @users.each do |user|%>
<tr>
<td><%= user.firstname %></td>
<td><%= user.lastname%></td>
<td><%= user.email %></td>
<td><%= link_to 'Edit', user_edit_path(user)%></td>
<td><%= link_to 'Destroy', user_destroy_path(user),method: :delete, data: {confirm: 'Are you sure?'}%></td>
<td><%= link_to 'profile', user_profile_path(user)%></td>
<%end%>
</tr>

</table>