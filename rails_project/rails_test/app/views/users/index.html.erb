<table border="2px">
<tr>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Email</th>
	<th>Edit</th>
	<th>Destroy</th>
</tr>	

<% @users.each do |user|%>
<tr>
<td><%= user.firstname %></td>
<td><%= user.lastname%></td>
<td><%= user.email %></td>
<td><%= link_to 'Edit', user_edit_path(user)%></td>
<td><%= link_to 'Destroy', user_destroy_path(user),method: :delete, data: {confirm: 'Are you sure?'}%></td>
<%end%>
</tr>

</table>
